<!DOCTYPE html>
<html lang='en'>

<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <div class="content">
          <h1>Task Manager</h1>
          <h4>My tasks</h4>

            <% @tasks.each do |task| %>
            <p>
              <% check = '<i class="fa fa-check-circle" aria-hidden="true"></i>'.html_safe %>
              <%= task.done? ? check : check %>
              <%= task.due %>
              <%= task.name %>
            </p>
            <% end %>


        </div>
      </div>
    </div>
  </div>
</div>


</html>
